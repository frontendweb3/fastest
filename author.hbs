            {{#if linkedin}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{social_url type=" linkedin"}}" target="_blank" rel="noopener noreferrer">
                {{> "icons/linkedin"}} {{!--
                partials/icons/linkedin.hbs --}}
            </a>
            {{/if}}
            {{#if website}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{website}}" target="_blank" rel="noopener noreferrer">
                {{> "icons/website"}} {{!--
                partials/icons/website.hbs --}}
            </a>
            {{/if}}
            {{#if youtube}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{social_url type=" youtube"}}" target="_blank" rel="noopener noreferrer">
                {{> "icons/youtube"}} {{!--
                partials/icons/youtube.hbs --}}
            </a>
            {{/if }}
            {{#if instagram}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{social_url type=" instagram"}}" target="_blank" rel="noopener noreferrer">
                {{> "icons/instagram"}} {{!--
                partials/icons/instagram.hbs --}}
            </a>
            {{/if}}

        </div>

    </div>

</div>

    <div class="container mx-auto mt-28 mb-20">
        <h1 class="text-3xl  font-bold tracking-tight"> Published by {{name}}</h1>
    </div>

    {{!-- get posts related to author base on author Id --}}
    {{#get "posts" limit="all" filter="authors:{{slug}}+id:-{{id}}" order="published_at desc" include="authors" }}

    {{#if posts}}
    <div class="container mx-auto px-6 py-10 space-y-12 md:space-y-28 lg:py-12 lg:px-8 ">

    {{#foreach posts}}
    {{> card }}
    {{/foreach}}
    </div>
    {{/if}}

    {{/get}}

    {{/author}}