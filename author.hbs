{{!< default}} 

{{#author}} 

<div class="flex flex-col md:flex-row gap-10 md:mx-auto my-12 items-center w-full lg:w-264 ">


        {{#if profile_image}}

        <div class="group">
            <div class="size-34 overflow-hidden rounded-full border-4 border-white shadow-xl dark:border-slate-800">
                <img class="h-full w-full object-cover" src="{{profile_image}}" alt="{{name}}" loading="lazy"
                    decoding="async" />
            </div>
        </div>

        {{else}}

        <div class="group">
            <div class="size-34 overflow-hidden rounded-full border-4 border-white shadow-xl dark:border-slate-800">
                <img class="h-full w-full object-cover" src="{{asset "assets/images/profile.png"}}" alt="{{name}}"
                    loading="lazy" decoding="async" />
            </div>
        </div>

        {{/if}}

    <div class="flex flex-col w-full p-6 space-y-6">

        <h2 class="text-xl sm:text-xl md:text-2xl font-bold"> {{name}} </h2>

        {{#if bio}}
            <p class="text-md md:text-xl">{{bio}}</p>
        {{/if}}

        <div class="flex gap-5 justify-start">

            {{#if twitter}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{social_url  type=" twitter" }}" target="_blank" rel="noopener noreferrer">
                {{> "icons/twitter"}} {{!--
                partials/icons/twitter.hbs --}}
            </a>
            {{/if}}
            {{#if facebook}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{social_url type=" facebook"}}" target="_blank" rel="noopener noreferrer">
                {{> "icons/facebook"}} {{!--
                partials/icons/facebook.hbs --}}
            </a>
            {{/if}}
            {{#if threads}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="{{social_url type=" threads"}}" target="_blank" rel="noopener noreferrer">
                {{> "icons/threads"}}
            </a>
            {{/if}}
            {{#if bluesky}}
