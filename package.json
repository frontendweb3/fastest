{
  "name": "fastest",
  "description": "Fastest ghost cms base theme. Fastest is lite wight, modern open-source theme",
  "version": "1.0.8",
  "type": "module",
  "engines": {
    "ghost": ">=6.0.0"
  },
  "license": "MIT",
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "npx nodemon --watch . --ext js,css,hbs --ignore assets/dist --ignore node_modules --exec \"node esbuild.config.js --watch\"",
    "format": "prettier .",
    "format-fix": "prettier --write .",
    "preview": "node esbuild.config.js --preview",
    "zip": "npm run build && bestzip $npm_package_name.zip assets/dist/* partials/* *.hbs package.json LICENSE",
    "test-v5": "pnpm dlx gscan@latest . --v5",
    "test-v6": "pnpm dlx gscan@latest . --v6",
    "pretest": "npm run build"
  },
  "author": {
    "name": "Rajdeep Singh",
    "email": "officialrajdeepsingh@gmail.com",
    "url": "https://officialrajdeepsingh.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frontendweb3/fastest"
  },
  "keywords": [
    "ghost",
    "theme",
    "blog",
    "light wight",
    "ghost-theme"
  ],
  "screenshots": {
    "desktop": [
      "assets/demo.png",
      "assets/demo-2.png",
      "assets/demo-3.png",
      "assets/demo-4.png",
      "assets/demo-5.png",
      "assets/demo-6.png",
      "assets/desktop.png"
    ],
    "mobile": "assets/mobile.png"
  },
  "config": {
    "posts_per_page": 12,
    "card_assets": true,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "logo_dark": {
        "type": "image",
        "default": "",
        "description": "Logo used in dark mode"
      },
      "home_layout": {
        "type": "select",
        "options": [
          "full-width",
          "two-column-grid"
        ],
        "default": "full-width",
        "description": "Control how posts are arranged on the homepage"
      },
      "card_style": {
        "type": "select",
        "options": [
          "card-first",
          "card-second"
        ],
        "default": "card-first",
        "description": "Choose which post card to use see on across the site"
      },
      "font_color_for_light_mode": {
        "type": "color",
        "default": "#000000",
        "description": "Change the font color for the whole website in light mode."
      },
      "font_color_for_dark_mode": {
        "type": "color",
        "default": "#ffffff",
        "description": "Change the font color for the whole website in dark mode."
      },
      "background_color_for_light_mode": {
        "type": "color",
        "default": "#ffffff",
        "description": "Change the background color for the whole website in light mode."
      },
      "background_color_for_dark_mode": {
        "type": "color",
        "default": "#000000",
        "description": "Change the background color for the whole website in dark mode."
      },
      "copyright_enabled": {
        "type": "boolean",
        "default": true,
        "description": "Show or hide the footer copyright text"
      },
      "copyright_text": {
        "type": "text",
        "default": "",
        "description": "Optional custom copyright message; leave blank to use the default"
      }
    }
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "bestzip": "^2.2.1",
    "gscan": "^5.2.5",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  },
  "renovate": {
    "extends": [
      "@tryghost:theme"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.3",
    "esbuild-plugin-tailwindcss": "^2.1.0",
    "postcss": "^8.5.6"
  }
}