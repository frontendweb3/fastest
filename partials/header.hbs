<header class="container mx-auto w-full flex flex-col gap-10 lg:gap-0 lg:flex-row px-12 py-6 items-center justify-between">


    <a class="flex items-center justify-center" href="{{@site.url}}">
        {{#if @site.logo}}
        <img width="120" height="120" class="block dark:hidden" src="{{@site.logo}}" alt="{{@site.title}}"
            loading="lazy" decoding="async" />
        {{#if @custom.logo_dark}}
        <img width="120" height="120" class="hidden dark:block" src="{{@custom.logo_dark}}" alt="{{@site.title}}"
            loading="lazy" decoding="async" />
        {{else}}
        <img width="120" height="120" class="hidden dark:block" src="{{@site.logo}}" alt="{{@site.title}}"
            loading="lazy" decoding="async" />
        {{/if}}
        {{else}}
        <span class="text-heading self-center text-lg font-semibold whitespace-nowrap">
            {{@site.title}}
        </span>
        {{/if}}
    </a>

    {{!-- Navigation --}}
    {{navigation}}

    <div class="justify-center flex items-center gap-5">

        {{!-- Custom Search Form --}}
        <button type="button" aria-label="Open Search form"
            class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
            data-ghost-search>
            {{> "Icons/search"}}
            <span class="sr-only">Search</span>
        </button>

        {{!-- Theme Toggle Button --}}
        <button id="theme-toggle" type="button" aria-pressed="false" aria-label="Switch to dark mode"
            class="z-50 flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors hover:scale-110 dark:border-slate-700 dark:bg-slate-800">
            <span id="theme-toggle-light-icon" class="hidden" aria-hidden="true">
                {{> "Icons/sun" }}
            </span>
            <span id="theme-toggle-dark-icon" class="hidden" aria-hidden="true">
                {{> "Icons/moon" }}
            </span>
            <span class="sr-only">Toggle color theme</span>
        </button>

        {{#if @site.twitter}}
        <a aria-label="Visit our Twitter profile"
            class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
            href="{{social_url type=" twitter" }}" target="_blank" rel="noopener noreferrer">
            {{> "icons/twitter"}} {{!-- partials/icons/twitter.hbs --}}
        </a>
        {{/if}}
        {{#if @site.facebook}}
        <a aria-label="Visit our Facebook profile"
            class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
            href="{{social_url type=" facebook" }}" target="_blank" rel="noopener noreferrer">
            {{> "icons/facebook"}} {{!-- partials/icons/facebook.hbs --}}
        </a>
        {{/if}}

        <div class="hidden sm:block h-5 rounded-3xl w-0.5 bg-primary"></div>

        {{#unless @member}}
        <a class="flex items-center gap-1 shadow-lg text-white rounded-full px-3 py-2 text-sm"
            style="background-color:{{@site.accent_color}}" href="#/portal/signup" data-portal="signup">
            {{> "icons/crown"}}
            <span>Pro</span>
        </a>
        {{else}}
        <a style="background-color:{{@site.accent_color}}" href="#/portal/account" aria-label="Open your account page"
            class="hidden sm:flex items-center gap-2 shadow-lg text-white rounded-full px-2.5 py-2 transition-transform hover:scale-110">
            {{#if @member.avatar_image}}
            {{!-- remove the query parameters from the Gravatar URL:
            https://www.gravatar.com/avatar/2a2c0d6c6a993402c5a107d39402e2fe?s=250&amp;r=g&amp;d=blank --}}
            {{#foreach (split @member.avatar_image separator="?")}}
            {{#if @first}}
            <img class="h-9 w-9 rounded-full object-cover" src="{{this}}" alt="{{@member.name}} avatar"
                decoding="async" />
            {{/if}}
            {{/foreach}}
            {{else}}
            <img class="h-9 w-9 rounded-full object-cover" src="{{asset "assets/images/profile.png"}}"
                alt="{{@member.name}} avatar" decoding="async" />
            {{/if}}
            {{@member.name}}
        </a>
        {{/unless}}

    </div>

</header>