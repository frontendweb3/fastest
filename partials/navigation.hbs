{{#if isSecondary}}
  <nav>
        <ul class="list-none flex justify-center flex-row items-center ">
            {{#foreach navigation}}
      
                <li class="text-left">

                    <a href="{{url absolute="true"}}" 
                        class="px-2 lg:px-6 py-6 text-md border-b-2 border-transparent hover:border-blue-600 leading-[22px] md:px-3 text-gray-500 hover:text-blue-500">
                         {{label}} 
                    </a>
                </li>

            {{/foreach}}
                
            </ul>
        </nav>

{{else}}

  <nav>
        <ul class="list-none flex justify-center flex-row items-center ">

            {{#foreach navigation}}
      
                <li class="text-left">

                    <a href="{{url absolute="true"}}" 
                        class="px-2 lg:px-6 py-6 text-md border-b-2 border-transparent hover:border-blue-600 leading-[22px] md:px-3 text-gray-500 hover:text-blue-500">
                         {{label}} 
                    </a>
                </li>

            {{/foreach}}
                
            </ul>
        </nav>

{{/if}}