<footer class="gap-10 container w-full mt-5 md:mt-25 mx-auto flex flex-col justify-center p-8 lg:p-10 items-center">

    <div class="mb-5 mt-5 flex flex-col gap-10 md:flex-row w-full justify-between items-center">

        <div class="mb-5 mt-5 flex items-center justify-center ps-2.5">
            {{#if @site.logo}}
            <img width="120" height="120" class="block dark:hidden" src="{{@site.logo}}" alt="{{@site.title}}"
                loading="lazy" decoding="async" />
            {{#if @custom.logo_dark}}
            <img width="120" height="120" class="hidden dark:block" src="{{@custom.logo_dark}}" alt="{{@site.title}}"
                loading="lazy" decoding="async" />
            {{else}}
            <img width="120" height="120" class="hidden dark:block" src="{{@site.logo}}" alt="{{@site.title}}"
                loading="lazy" decoding="async" />
            {{/if}}
            {{else}}
            <span class="text-heading self-center text-lg font-semibold whitespace-nowrap">
                {{@site.title}}
            </span>
            {{/if}}
        </div>

        <div aria-label="footer navigation">  {{navigation type="secondary"}}   </div>

    </div>

    {{!-- Optional copyright line controlled by theme settings --}}
    {{#if @custom.copyright_enabled}}
    <div aria-label="Copyright information" class="mt-12 mx-auto">
        <p class="text-center text-sm">Copyright &copy; {{date format="YYYY"}} {{@site.title}}. All rights reserved by
            <a target="_blank" class="underline underline-offset-4 mx-1"
                href="https://github.com/frontendweb3/">frontend web</a>.
        </p>
        {{else}}
        <p class="text-sm text-center">
            {{#if @custom.copyright_text}}
            {{@custom.copyright_text}}
            {{/if}}
        </p>
    </div>
    {{/if}}

</footer>