<div
    class="flex flex-col m-auto my-8 xs:my-8 sm:my-8 md:my-8 lg:my-10 xl:my-10 2xl:my-22 p-6 w-5/6 sm:w-5/6 md:w-5/6 lg:w-5/6 xl:w-5/6 2xl:w-5/6">
    <h2 class="text-sm text-gray-600 xs:text-md sm:text-md md:text-lg xl:text-xl 2xl:text-1xl">
        {{date published_at}}
    </h2>
    <a href="{{url}}">
        <h1
            class="text-1xl text-gray-800 xs:mt-2 sm:mt-2 md:mt-2 lg:mt-2 xl:mt-2 2xl:mt-2 xs:text-1xl sm:text-3xl md:text-4xl xl:text-5xl 2xl:text-5xl">
            {{title}}
        </h1>
    </a>

    <a href="{{url}}">
        <p
            class="text-sm text-gray-600 mt-0 xs:mt-0 sm:mt-0 md:mt-1 lg:mt-2 xl:mt-2 2xl:mt-2 xs:text-md sm:text-md md:text-xl xl:text-2xl 2xl:text-3xl">
            {{excerpt}}
        </p>
    </a>

    <div class="flex flex-row mt-2">



        <a href="{{url}}">
            <h5 class="text-sm text-gray-600 xs:text-md sm:text-md md:text-lg xl:text-xl 2xl:text-1xl">
               {{{block "authorName"}}}
            </h5>
        </a>

        <h5 class="text-sm text-gray-600 ml-5 xs:text-md sm:text-md md:text-lg xl:text-xl 2xl:text-1xl">
            {{reading_time}}
        </h5>
    </div>
</div>