  <article class="group mx-auto w-full m-10 bg-card text-card-foreground md:mx-auto flex flex-col rounded-xl shadow-md transition-transform duration-300 ease-in-out hover:scale-[1.02]">
    
    <div class="rounded-none h-60 lg:h-70 col-span-2 justify-self-auto relative m-0 overflow-hidden lg:rounded-xl shrink-0">
      {{#if feature_image}}
        <img
          srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w, {{img_url feature_image size="xl"}} 2000w"
          sizes="(max-width: 1000px) 400px, 700px"
          src="{{img_url feature_image size="m"}}"
          class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-120"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
      {{/if}}

    </div>

    <div class="p-6 lg:p-8 col-span-2 flex flex-col justify-center lg:col-start-3 lg:col-end-5 ">

      <div class="flex mt-2 flex-row justify-between">

        {{#if primary_tag}}
            <a href="{{primary_tag.url}}" class="inline-flex font-sans text-base antialiased font-semibold leading-relaxed tracking-normal gap-2 items-center py-0.5 no-underline uppercase hover:underline hover:underline-offset-4 {{primary_tag.slug}}">
                {{> "icons/tag" class="size-4"}} {{!-- partials/icons/tag.hbs --}}
                {{primary_tag.name}}
            </a>
        {{/if}}

        {{#unless access}}

        {{#has visibility="members"}}
        <h6 class="mb-4 flex items-center gap-2 font-sans text-base antialiased font-semibold leading-relaxed tracking-normal uppercase">
          {{> "icons/lock"}}
          Members only
        </h6>
        {{else}}
        <h6 class="mb-4 flex items-center gap-2 font-sans text-base antialiased font-semibold leading-relaxed tracking-normal uppercase">
          {{> "icons/lock"}}
          Paid Members only
        </h6>
        {{/has}}

        {{/unless}}

      </div>

      <div class="flex mt-5 flex-col">
        <h4 class="mb-2 font-sans text-2xl antialiased font-semibold leading-snug tracking-normal">
          {{title}}
        </h4>
      </div>

      <div class="flex mt-5 flex-row justify-between items-center">

        {{!-- author --}}
        <div class="hidden sm:flex items-center space-x-4">

          {{#if primary_author.profile_image}}
              <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}"
                class="w-6 h-6 rounded-full " />
          {{else}}
              <img src="{{asset "images/profile.png"}}" alt="{{primary_author.name}}"
                class="w-6 h-6 rounded-full " />
          {{/if}}          
          
          <div class="flex flex-col justify-center items-center">
            <a class="w-full text-sm font-medium" href="{{primary_author.url}}">
              {{primary_author.name}}
            </a>
          </div>

        </div>

        {{!-- author for small --}}
        <a class="block sm:hidden text-sm font-medium" href="{{primary_author.url}}">
          {{primary_author.name}}
        </a>
       

        <a href="{{url}}" class="flex items-center gap-2 px-2.5 py-1 font-sans text-xs hover:underline underline-offset-4 font-bold text-center uppercase align-middle animate-in fade-in duration-500 ease-in-out">

            Read More

            {{> "icons/arrow"}} {{!-- partials/icons/arrow.hbs --}}

        </a>

      </div>

    </div>

  </article>