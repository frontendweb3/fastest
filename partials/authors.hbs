  {{#if authors}}
  
    {{#foreach authors}}
     
      <div class="flex flex-row m-auto my-3 w-6/6 xs:w-5/6 sm:w-5/6 md:w-5/6 lg:w-5/6 xl:w-5/6 2xl:w-5/6">
        <div class="bg-cover h-12 w-12 rounded-full bg-center" style="background-image: url('{{profile_image}}')"></div>
        <div class="flex flex-col w-6/6 px-3">
            <a href='{{url}}' target='_blank'>
                <h1 class="text-grey-800">{{name}}</h1>
            </a>
            <div class="flex flex-row justify-around content-center">
                <time class="text-slate-600 dark:text-slate-400 text-xs xs:text-xs sm:text-xs md:text-sm lg:text-sm xl:text-sm 2xl:text-sm"
                    datetime="{{date published_at format="MMMM DD, YYYY"}}">
                    {{date published_at format="MMMM DD, YYYY"}}
                </time>
                <p class="text-slate-600 dark:text-slate-400 mx-3 text-xs xs:text-xs sm:text-xs md:text-sm lg:text-sm xl:text-sm 2xl:text-sm">.</p>

                {{{block "fastestReadingTime"}}}
               
                <ul class=" flex-row justify-around hidden xs:hidden sm:hidden md:flex lg:flex xl:flex 2xl:flex">
                         {{#if facebook}} 
                            <li class="mx-3 text-sm flex items-center">
                                <a target="_blank" href="https://facebook.com/{{facebook}}" >
                                    {{> Icons/facebook}}
                                </a>
                            </li>
                         {{/if}}
                         {{#if twitter}} 
                            <li class="mx-3 text-sm flex items-center">
                                <a target="_blank" href="https://twitter.com/{{twitter}}" >
                                    {{> Icons/twitter}}
                                </a>
                            </li>
                        {{/if}}
                        {{#if website}} 
                            <li class="mx-3 text-sm flex items-center">
                                <a target="_blank" href="{{website}}" >
                                    {{> Icons/website}}
                                </a>
                            </li>
                        {{/if}}
                </ul>
            </div>
        </div>
    </div>
    {{/foreach}}
    
  {{/if}}

